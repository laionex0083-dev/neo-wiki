# Neo-Wiki 환경 변수 설정 (예시)
# 이 파일을 .env 로 복사하고 값을 수정하세요

# 서버 설정
PORT=3001
HOST=0.0.0.0

# 보안 (프로덕션에서는 반드시 변경!)
JWT_SECRET=your-super-secret-key-change-this-in-production

# 데이터베이스
DB_PATH=./data/wiki.db

# 업로드
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# 라즈베리 파이 메모리 최적화 (필요시 true로 설정)
MEMORY_OPTIMIZE=false

# 캐시
CACHE_ENABLED=true
CACHE_TTL=300

# 로깅 (debug, info, warn, error)
LOG_LEVEL=info

# 위키 설정
WIKI_NAME=Neo-Wiki
WIKI_MAIN_PAGE=대문
ALLOW_ANONYMOUS_EDIT=true
DEFAULT_SKIN=default
